# Configuration du serveur
PORT=3000
NODE_ENV=development

# URL du frontend (pour les liens dans les emails)
FRONTEND_URL=http://localhost:3001

# Configuration de la base de données PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=event_planner_auth
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# Bootstrap automatique de la base de données
# ⚠️  DÉSACTIVÉ PAR DÉFAUT EN PRODUCTION POUR SÉCURITÉ
# Mettre à 'true' uniquement pour l'initialisation ou le développement
DB_AUTO_BOOTSTRAP=false

# Configuration JWT (générer une clé forte de 256+ bits)
JWT_SECRET=your_super_secure_256_bit_secret_key_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Configuration sécurité
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Configuration Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Configuration SendGrid (fallback email)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@eventplanner.com

# Configuration SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Configuration Vonage (fallback SMS)
VONAGE_API_KEY=your_vonage_api_key
VONAGE_API_SECRET=your_vonage_api_secret
VONAGE_FROM_NUMBER=EventPlanner

# Configuration Cache Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Configuration OTP
OTP_LENGTH=6
OTP_EXPIRES_IN=300

# Configuration Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs
LOG_MAX_SIZE=20MB
LOG_MAX_FILES=14d

# Configuration Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Configuration Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Configuration OAuth - Google Sign-In
# Obtenir depuis : https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Configuration OAuth - Apple Sign-In  
# Obtenir depuis : https://developer.apple.com/developer/resources/
APPLE_CLIENT_ID=com.yourapp.service
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_APPLE_PRIVATE_KEY_CONTENT\n-----END PRIVATE KEY-----"

# Configuration OAuth - Sécurité
OAUTH_TOKEN_EXPIRES_IN=10m
OAUTH_STATE_EXPIRES_IN=5m
OAUTH_NONCE_EXPIRES_IN=5m